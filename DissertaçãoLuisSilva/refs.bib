@article{ferreiraPortugal,
author = {Ferreira, J. J. and Gonçalves, N. and Valadas, A. and Januário, C. and Silva, M. R. and Nogueira, L. and Vieira, J. L. M. and Lima, A. B.},
title = {Prevalence of Parkinson's disease: a population-based study in Portugal},
journal = {European Journal of Neurology},
volume = {24},
