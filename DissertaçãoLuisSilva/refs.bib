@Article{diagnostics12123000,
AUTHOR = {Barukab, Omar and Ahmad, Amir and Khan, Tabrej and Thayyil Kunhumuhammed, Mujeeb Rahiman},
TITLE = {Analysis of Parkinson&rsquo;s Disease Using an Imbalanced-Speech Dataset by Employing Decision Tree Ensemble Methods},
